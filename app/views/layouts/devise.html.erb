<% content_for :main do %>
  <main class="hero is-light is-fullheight">
    <header class="hero-head">
      <%= render 'navbar' %>
    </header>
    <section class="hero-body">
      <div class="container">
        <h1 class="title has-text-centered"><%= t 'form.title', scope: [:devise, controller_name, action_name] %></h1>
        <%= render 'notifications' %>
        <div class="columns is-centered">
          <div class="column is-three-fifths">
            <div class="card">
              <div class="card-content">
                <%= render 'form_errors' %>
                <%= yield :form %>
              </div>
              <% if controller_name == 'registrations' || controller_name == 'sessions' %>
              <div class="card-footer">
                <%= link_to t(:recover_password, scope: 'devise.nav'), new_user_password_path, class: 'card-footer-item' %>
                <%= link_to t(:resend_confirmation, scope: 'devise.nav'), new_user_confirmation_path, class: 'card-footer-item' %>
                <%= link_to t(:resend_unlock, scope: 'devise.nav'), new_user_unlock_path, class: 'card-footer-item' %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <footer class="hero-foot">
      <%= render 'footer' %>
    </footer>
  </main>
<% end %>
<%= render template: 'layouts/application' %>
