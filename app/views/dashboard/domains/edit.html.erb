<main id="main" aria-role="main">
  <section class="section">
    <div class="container pb-6">
      <%= render 'notifications' %>
      <div class="columns is-centered">
        <div class="column is-three-fifths">
          <div class="card">
            <div class="card-content">
              <div class="container has-text-centered pb-4">
                <h1 class="title has-text-dark"><% t('.title') %></h1>
              </div>

              <%= render 'form_errors' %>

              <%= form_for(@domain, url: dashboard_domain_path(@domain)) do |f| %>
                <%= render partial: 'domain_fields', locals: { f: f } %>

                <%= f.submit t('.submit'), class: 'button is-primary is-large is-fullwidth' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
