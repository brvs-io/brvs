<main id="main" aria-role="main">
  <section class="section">
    <div class="container pb-6">
      <%= render 'notifications' %>
      <div class="columns is-centered">
        <div class="column is-three-fifths">
          <div class="card">
            <div class="card-content">
              <%= form_for Link.new, url: dashboard_links_path do |f| %>
                <div class="field has-addons">
                  <div class="control is-expanded"><%= f.text_field :target, class: 'input is-large', placeholder: t('.target_placeholder') %></div>
                  <div class="control"><%= f.submit t('.create_link'), class: 'button is-large is-primary' %></div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
