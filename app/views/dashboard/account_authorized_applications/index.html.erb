<%= render 'account_applications_tabs' %>
<section>
  <div class="level">
    <div class="level-item">
      <%= link_to t('.revoke_all'), revoke_all_dashboard_account_authorized_applications_path, class: 'button is-danger', method: :delete, confirm: 'Are you sure?' %>
    </div>
  </div>
  <% @applications.each do |application| %>
    <section class="box">
      <div class="level">
        <div class="level-left">
          <%= link_to application.name, dashboard_account_authorized_application_path(application), class: 'title is-4' %>
        </div>
        <div class="level-right">
          <%= link_to t('.authorized_applications.application.revoke'), dashboard_account_authorized_application_path(application), class: 'button is-danger is-outlined is-small', confirm: 'Are you sure?', method: :delete %>
        </div>
      </div>
    </section>
  <% end %>
</section>
